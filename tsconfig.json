{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "dist",
		"lib": [
			"ESNext"
		],
		"sourceMap": true,
		"rootDir": "edge",
		"esModuleInterop": true,
		"allowUnreachableCode": false,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization": true,
		"noUnusedLocals": true,
		"useUnknownInCatchVariables": true
	},
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}